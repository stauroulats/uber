<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@null"
            android:src="@drawable/ic_arrow_back"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:text="@string/trip_history"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="28sp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:datePickerMode="calendar"
            />
        <View android:id="@+id/dividor"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:background="@color/light_blue" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <View android:id="@+id/dividor2"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:background="@color/light_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/money"/>

        <TextView
            android:id="@+id/total_trips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/quicksand_regular"
            android:hint="@string/total_trips"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/total_trips_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:fontFamily="@font/quicksand_regular"
            android:textAlignment="center"
            android:textColor="@color/light_green"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/road"/>

        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/quicksand_regular"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/km_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:fontFamily="@font/quicksand_regular"
            android:textAlignment="center"
            android:textColor="@color/light_green"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/money"/>
        <TextView
            android:id="@+id/earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/quicksand_regular"
            android:hint="@string/earnings"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/earnings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:fontFamily="@font/quicksand_regular"
            android:hint="@string/value"
            android:textAlignment="center"
            android:textColor="@color/light_green"
            android:textSize="14sp" />

    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/week_statistics_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:background="@color/light_blue"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/week_statistics"
                android:textAlignment="center"
                android:textColor="@color/blue_black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/month_statistics_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:background="@color/light_blue"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/month_statistics"
                android:textAlignment="center"
                android:textColor="@color/blue_black"
                android:textSize="14sp" />



        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mresponse"
        android:layout_marginTop="35dp"
        android:visibility = "gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>